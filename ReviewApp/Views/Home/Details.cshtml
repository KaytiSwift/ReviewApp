@model ReviewApp.Models.Review
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link rel="stylesheet" href="~/StyleSheet.css" />
</head>
<body>
    <section>
        <h1>Details for @Model.Title</h1>
        <img class="image" src="@Model.ImageURL" alt="@Model.AltPicText" />
    </section>
    <section>
        <p>Review: @Model.Content</p>
    </section>
    <section class="category">
        Category: @Model.ReviewCategory
    </section>
    <section><a href="/home/index">Home Page</a></section>
</body>
</html>
